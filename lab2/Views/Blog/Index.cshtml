@model IEnumerable<BlogModel>

@{
    ViewData["Title"] = "List of blogs";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table" style="text-align:center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.User.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.BlogId)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.User.Username)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BlogId)
                        </td>
                        <td class="align-middle">
                            <a class"btn btn-outline-info" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Blog" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New </a>
</div>